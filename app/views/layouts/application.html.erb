<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header id="home" class="hero">
        <div class="hero-body">
            <div class="hero-text text-center">
                <%= image_tag "logo-horizon.png", 'class' => 'img-responsive'%>
                <!-- //.page-scroll -->
            </div>
            <!-- //.hero-text -->
        </div>
        <!-- //.hero-body -->
    </header>

<%= render "layouts/navbar" %>

<div class="col-lg-12">
  <div class="container">
    <% if user_signed_in? %>
      <%= render "layouts/user_navbar" %>
    <% end %>
    <div class="row">
      <hr>
        <section id="pinBoot">
          <%= yield %>
        </section>
      <hr>
    </div>
    <p>
      <br>
    </p>

  </div>
</div>
  <%= render "layouts/footer" %>
</body>
</html>
