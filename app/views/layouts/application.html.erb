<!DOCTYPE html>
<html>
<head>
  <title>Players</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header id="home" class="hero">
        <div class="hero-body">
            <div class="hero-text text-center">
                <a href='<%= root_path %>'> <%= image_tag "logo-horizon.png", 'class' => 'img-responsive' %> </a>
                <!-- //.page-scroll -->
            </div>
            <!-- //.hero-text -->
        </div>
        <!-- //.hero-body -->
    </header>

<%= render "layouts/navbar" %>

<div class="col-lg-12">
  <div class="container">
    <% if user_signed_in? %>
    <br>
      <%= render "layouts/user_navbar" %>
    <% end %>
    <div class="row">
      <hr>
          <%= yield %>
      <hr>
    </div>
  </div>
</div>
  <%= render "layouts/footer" %>
</body>
<script src="<%= root_path %>application.js" data-turbolinks-track="true"></script>
</html>
