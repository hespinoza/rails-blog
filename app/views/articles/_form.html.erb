<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group col-lg-12 col-md-12">
    <%= f.label :name, "Nombre" %> (Título del articulo)
    <br>
    <%= f.text_field :name, 'class' => 'form-control' %>
  </div>
  <div class="form-group col-lg-6 col-md-6">
    <%= f.label :cover, "Imagen de Cabecera" %> (Imagen principal del artículo, puede ser jpg, gif, png, etc)
    <br>
    <%= f.text_field :cover, 'class' => 'form-control' %>
  </div>
  <div class="form-group col-lg-6 col-md-6">
    <%= f.label :youtube, "Video de Cabecera" %> (Inserte sólo el id del video de Youtube ejemplo: https://www.youtube.com/watch?v=<b>oAPdNKTrBYA</b>)
    <br>
    <%= f.text_field :youtube, 'class' => 'form-control' %>
  </div>
  <div class="form-group col-lg-12 col-md-12">
    <%= f.label :sinopsis, "Sinopsis de la Nota" %> Este es el texto que sale en la pagina principal, no debe ser muy extenso y que trate de llamar la atención.
    <br>
    <%= f.cktext_area :sinopsis, :ckeditor => {:toolbar => 'mini'}, 'class' => 'form-control' %>
  </div>
  <div class="form-group col-lg-12 col-md-12">
    <%= f.label :body, "Cuerpo de la Nota" %><br>
    <%= f.cktext_area :body, :ckeditor => {:toolbar => 'mini'}, 'class' => 'form-control' %>
  </div>
  <div class="form-group col-lg-6 col-md-6">
    <%= f.label :category, "Categoria" %>
    <br>
    <select id="article_category" name="article[category]" class="form-control">
      <option value="nil"> </option>
      <option value="news">News</option>
      <option value="reviews">Reviews</option>
      <option value="unboxing">Unboxing</option>
      <option value="gameplays">Gameplay</option>
    </select>
  </div>
  <div class="actions form-group col-lg-6 col-md-6">
    <center>
      <%= f.submit "Enviar Nota", class: "btn btn-primary"  %>
    </center>
  </div>
<% end %>
