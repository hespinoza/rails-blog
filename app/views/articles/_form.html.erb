<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, "Nombre" %> (Título del articulo)
    <br>
    <%= f.text_field :name, 'class' => 'custom-form' %>
  </div>
  <div class="form-group">
    <%= f.label :cover, "Imagen de Cabecera" %> (Imagen principal del artículo, puede ser jpg, gif, png, etc)
    <br>
    <%= f.text_field :cover, 'class' => 'custom-form' %>
  </div>
  <div class="form-group">
    <%= f.label :youtube, "Video de Cabecera" %> (Inserte sólo el id del video de Youtube ejemplo: https://www.youtube.com/watch?v=<b>oAPdNKTrBYA</b> , sólo si el campo anterior de imagen de cabecera está vacío)
    <br>
    <%= f.text_field :youtube, 'class' => 'custom-form' %>
  </div>
  <div class="form-group">
    <%= f.label :sinopsis, "Sinopsis de la Nota" %> Este es el texto que sale en la pagina principal, no debe ser muy extenso y que trate de llamar la atención.
    <br>
    <%= f.cktext_area :sinopsis, 'class' => 'custom-form', :ckeditor => {:toolbar => 'mini'} %>
  </div>
  <div class="form-group">
    <%= f.label :body, "Cuerpo de la Nota" %><br>
    <%= f.cktext_area :body, 'class' => 'custom-form', :ckeditor => {:toolbar => 'mini'} %>
  </div>
  <div class="actions">
    <%= f.submit "Enviar Nota", class: "btn btn-primary"  %>
  </div>
<% end %>
