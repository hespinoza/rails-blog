<div class="jumbotron custom-form">
	<div class="container">
		<table class="table table-hover">
			<tr>
				<th>Estado</th>
				<th>Titulo</th>
				<th>Categoria</th>
				<th>Fecha</th> 
				<th>Acciones</th>
			</tr>
			<% @articles.each do |a| %>
				<tr>
					<td class="<% if a.state == "created" %>
									warning
								<% elsif a.state == "published" %>
									info
								<% elsif a.state == "unpublished" %>
									danger
								<% end %>">
						<%if a.state == "created" %>
							Revisi√≥n Pendiente
						<% elsif a.state == "published" %>
							Publicado
						<% elsif a.state == "unpublished" %>
							Eliminado
						<% end %>
					</td>
					<td><%= a.name %></td>
					<td><%= a.category %></td> 
					<td><%= a.created_at.to_date %></td>
					<td><%= link_to 'Ver', a %> | <%= link_to 'Editar', edit_article_path(a) %>
					</td>
				</tr>
			<% end %>
		</table>
	</div>
</div>	